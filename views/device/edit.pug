extends ../layout

block main
    section(class="section")
        div(class="columns is-mobile")
            div(class="column")
                    div(class="container")
                        div(class="content")
                            form(action="/device/"+editInfo._id+"/edit" method="post")
                                section(class="section")
                                    h1 장비 수정
                                    h6 제조사
                                    p
                                        div(class="select")
                                            select(name="manufacturer")
                                                each manufacturerlist in manufacturerInfo
                                                    option(value= manufacturerlist)= manufacturerlist
                                    h6 이름
                                    p
                                        input(class="input" type="text" name="name" value= editInfo.name required)
                                    h6 모델명
                                    p
                                        input(class="input" type="text" name="model" value= editInfo.model required)
                                    h6 시리얼 번호
                                    p
                                        input(class="input" type="text" name="serial" value= editInfo.serial required)
                                    h6 IEMI
                                    p
                                        input(class="input" type="text" name="imei" value= editInfo.imei required)
                                    h6 OS 종류
                                    p
                                        div(class="select")
                                            select(name="os_type") 
                                                option(value="ANDROID") ANDROID
                                                option(value="iOS") iOS
                                    h6 OS 버전
                                    p
                                        input(class="input" type="text" name="os_version" value= editInfo.os_version required)
                                    h6 취득일
                                    p
                                        input(class="input" type="date" name="get_dt" value= editInfo.get_dt)
                                    h6 자산 코드
                                    p
                                        input(class="input" type="text" name="assetcode" value= editInfo.assetcode)
                                    h6 비고
                                    p
                                        textarea(class="textarea has-fixed-size" name="info" value= editInfo.info)
                                section(class="section")
                                    dev(class="field is-grouped")
                                        p(class="control")
                                            input(class="button is-success" type="submit" value="확인")
                                        p(class="control")
                                            a(class="button" href="/device/"+editInfo._id) 취소
